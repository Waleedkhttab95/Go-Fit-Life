@section scripts{

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.13/datatables.min.js"></script>


    <script>
        var cal=@Model.Calories;
        var pro=@Model.Protin;
        var carb=@Model.Carb;
        var ft=@Model.Fat;

        document.getElementById("calo").innerHTML = cal;  
        document.getElementById("pro").innerHTML = pro;
        document.getElementById("hcarb").innerHTML = carb;
        document.getElementById("hfat").innerHTML = ft;
        $(document).ready(function() {

                $("#tab").DataTable({
                    ajax: {
                        url: "/api/Foods",
                        dataSrc: "",
                        method: "GET"
                    },
                    columns: [
                    {
                        data: "Foodname"
            },
                    {
                        data: "Fcalore"
                    },
                    {
                        data: "Fproten"
                    },
                    {
                        data: "Fcarb"
                    },
                    {
                        data: "Ffat"

                    },
                    {
                        data: "Fcalore",
                        render: function(data) {
                            return "<button class='btn-link js-addc' data-Fcalore=" + data + "> calculate </button>";
                        }
                    },
                        {
                            data: "Fproten",
                            render: function(data) {
                                return "<button class='btn-link js-addp' data-Fprotein=" + data + "> calculate </button>";
                            } 
                        },
                         {
                             data: "Fcarb",
                             render: function(data) {
                                 return "<button class='btn-link js-addca' data-Fcarb=" + data + "> calculate </button>";
                             } 
                         },
                          {
                              data: "Ffat",
                              render: function(data) {
                                  return "<button class='btn-link js-addf' data-Ffat=" + data + "> calculate </button>";
                              } 
                          },
                           {
                               data: "Foodname",
                               render: function(data) {
                                   return "<button class='btn-link js-addn' data-Fname=" + data + "> Add </button>";
                               } 
                           }
                ]

                });

            $("#tab").on("click",
                ".js-addn",
                function() {
                    var button = $(this);
                    var Fm = button.attr("data-Fname");

                    $("#Food").append("<li class='list-group-item'  style='background-color: lavender'>"+Fm+"</li>");


                });

            $("#tab").on("click",
              ".js-addc",
              function() {
                  var button = $(this);
                
                  var cl = button.attr("data-Fcalore");
                  cal = cal - cl;
                  document.getElementById("calo").innerHTML =cal;



              });

            $("#tab").on("click",
              ".js-addp",
              function() {
                  var button = $(this);

                  var cl = button.attr("data-Fprotein");
                  pro = pro - cl;
                  document.getElementById("pro").innerHTML = pro;



              });

            $("#tab").on("click",
              ".js-addca",
              function() {
                  var button = $(this);

                  var cl = button.attr("data-Fcarb");
                  carb = carb - cl;
                  document.getElementById("hcarb").innerHTML = carb;



              });

            $("#tab").on("click",
              ".js-addf",
              function() {
                  var button = $(this);

                  var cl = button.attr("data-Ffat");
                  ft = ft - cl;
                  document.getElementById("hfat").innerHTML = ft;



              });

        });
    </script>



}


